<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <div class="admin-header">
      <h1>Admin Dashboard</h1>
      <div>
        <span>Welcome, <%= session.user %></span>
        <a href="/admin/logout">Logout</a>
      </div>
    </div>
    <div class="admin-container">
      <h2>All Success Stories</h2>
      <ul class="dashboard-list">
        <% stories.forEach(story => { %>
          <li>
            <div>
              <strong><%= story.name %></strong> - <%= story.gmail %> - <%= story.successStory %>
            </div>
            <div>
              <a href="/admin/edit/<%= story._id %>">Edit</a>
              <a href="/admin/delete/<%= story._id %>" onclick="return confirm('Are you sure you want to delete this story?');">Delete</a>
            </div>
          </li>
        <% }) %>
      </ul>
      <a href="/admin/add" style="display:inline-block; margin-top:20px; background:#0077cc; padding:10px 15px; color:#fff; border-radius:4px; text-decoration:none;">Add New Story</a>
    </div>
  </div>
</body>
</html>
